    if value >= 70:
        return "HOT"
    elif 69>= value >=40:
        return "WARM"
    else:
        return "COLD"    

cities = {'New York': 32, 'Bostion': 75, 'Los Angeles':100, 'Chicago':50}
desc_cities = {key: check_temp(value) for (key,value) in cities.items()}
print(desc_cities)

